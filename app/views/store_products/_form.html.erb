<%= form_for @store_product, :html => { :class => "form-horizontal store_product" } do |f| %>

    <% if @store_product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@store_product.errors.count, "error") %> prohibited this store_product from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @store_product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :product_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :product_id, (@products.collect{|p| [p.name, p.id]}) , :class => 'form-control' %>
    </div>
    <%= error_span(@store_product[:product_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :store_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :store_id, (@stores.collect{|s| [s.name, s.id]}) ,:class => 'form-control' %>
    </div>
    <%= error_span(@store_product[:store_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :quantity, :class => 'form-control' %>
    </div>
    <%= error_span(@store_product[:quantity]) %>
  </div>
  <div class="control-group">
    <%= f.label :available, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :available, ['true', 'false'], :class => 'form-control' %>
    </div>
    <%= error_span(@store_product[:available]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            store_products_path, :class => 'btn btn-default' %>

<% end %>
