<div class="row">
  <% unless @stores.blank? %>
  <div class="store-info">
    <% @stores.each do |store| %>
    <a href="#" class="divlink">
      <i class="fa fa-map-marker fa-2x"><h5 class="name" style="margin-top: -17px;margin-left: 17px;"><%= store[:store_name] %></h5></i>
      <p> <%= store[:address] %>  </p>
      <p><%= store[:distance].round(4)%> Miles</p>
      <b class='lat' style='display:none;'> <%= store[:lat] %> </b>
      <b class='lng' style='display:none;'> <%= store[:lng] %> </b>
    </a>
    <% end %>
  </div>  
  <% else %>
  <p> Sorry Products are not available!</p>
  <% end %>
</div>